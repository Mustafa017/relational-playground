{
  "version": 2,
  "builds": [{
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
          "distDir": "build"
      }
  }],
  "build": {
    "env": {
      "CI": "1",
      "SENTRY_AUTH_TOKEN": "@sentry_auth_token",
      "SENTRY_ORG": "rit-data-lab"
    }
  },
  "headers": {
    "source": "*",
    "headers": {
      "X-Content-Type-Options": "nosniff",
      "X-Frame-Options": "DENY",
      "X-XSS-Protection": "1; mode=block"
    }
  }
}
